<div class="list-groups">
  {% assign certificates = data[1] | sort: 'date' | reverse %}

  <div class="row">
    {% for content in certificates %}
      <div class="col-12 col-md-6 mb-3">
        <div class="list-group">
          <table class="table-cv list-group-table">
            <tbody>
              <tr>
                {% if content.icon %}
                  <td class="list-group-category-icon">
                    <i class="{{ content.icon }}"></i>
                  </td>
                {% else %}
                  <td class="list-group-category-icon"></td>
                {% endif %}

                <td class="list-group-category">
                  <a href="{{ content.url | default: '#' }}">{{ content.name }}</a>
                </td>
              </tr>

              <tr>
                <td></td>
                <td class="list-group-name">
                  <div>
                    <b>{{ content.issuer }}</b>
                  </div>
                  {% if content.date and content.date != '' %}
                    <div class="text-muted" style="font-size: 0.85rem; margin-top: 2px;">
                      {{ content.date }}
                    </div>
                  {% endif %}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
